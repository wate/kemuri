---
title: 予約管理 - 予約状況
action_name: 予約状況
---
{% extends "layout/default.twig" %}
{% block content_header %}
<div class="col">
  <h1 class="m-0">{{ feature_name }}</h1>
</div>
<!-- /content-header -->
{% endblock %}
{% block content %}
<div class="row">
  <div class="col-3">
    <div class="sticky-top mb-3">
      <div class="card card-outline">
        <div class="card-header">
          <h3 class="card-title">予約登録</h3>
        </div>
        <div class="card-body">
          <div class="form-group">
            <label for="birthday" class="control-label">予約日</label>
            <input type="date" name="birthday" id="birthday" value="" class="form-control"
              pattern="[0-9]\{4}-[0-9]\{2}-[0-9]\{2}">
          </div>
          <div class="row">
            <div class="col">
              <div class="form-group">
                <label for="time" class="control-label">開始時間</label>
                <input type="time" name="time" id="time" value="" step="Time Field" class="form-control"
                  pattern="[0-9]\{2}:[0-9]\{2}">
              </div>
              <!-- /.form-group -->
            </div>
            <div class="col">
              <div class="form-group">
                <label for="time" class="control-label">終了時間</label>
                <input type="time" name="time" id="time" value="" step="Time Field" class="form-control"
                  pattern="[0-9]\{2}:[0-9]\{2}">
              </div>
              <!-- /.form-group -->
            </div>
          </div>
          <div class="form-group">
            <label for="text" class="control-label">予約名</label>
            <div class="input-group">
              <input type="text" name="text" id="text" value="" class="form-control">
              <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="button" id="button-addon2">クリア</button>
              </div>
            </div>
          </div>
          <!-- /.form-group -->
          <div class="form-group">
            <label for="text" class="control-label">備考</label>
            <textarea name="remark" id="remark" class="form-control" cols="30" rows="5"></textarea>
          </div>
          <!-- /.form-group -->
          <hr>
          <div class="form-group">
            <label for="tel" class="control-label">電話番号から探す</label>
            <div class="input-group">
              <input type="text" name="text" id="text" value="" class="form-control">
              <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="button" id="button-addon2">検索</button>
              </div>
            </div>
            <!-- /.input-group -->
          </div>
          <!-- /.form-group -->
          <div class="form-group">
            <label for="tel" class="control-label">会員名/フリガナから探す</label>
            <div class="input-group">
              <input type="text" name="text" id="text" value="" class="form-control">
              <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="button" id="button-addon2">検索</button>
              </div>
            </div>
            <!-- /.input-group -->
          </div>
          <!-- /.form-group -->
        </div>
        <div class="card-footer">
          <button type="submit" class="btn btn-success">予約登録</button>
        </div>
      </div>
      <!-- /.card -->
      <a href="{{ action.view.url }}" class="btn btn-secondary">予約情報の表示</a>
      <a href="{{ action.edit.url }}" class="btn btn-secondary">予約情報の編集</a>
    </div>
  </div>
  <div class="col-9">
    <div class="card card-outline">
      <div class="card-body" id="calendar">
        <!-- ここにカレンダーがレンダリングされる -->
      </div>
    </div>
    <!-- /.card -->
  </div>
</div>
<!-- /.row -->
{% endblock %}
{% block script_bottom %}
<script src='/assets/js/events/calendar.js'></script>
{% endblock %}
