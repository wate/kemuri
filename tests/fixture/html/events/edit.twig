---
title: 予約管理 - 予約情報の編集
action_name: 予約情報の編集
---
{% extends "layout/default.twig" %}
{% block content_header %}
<div class="col">
  <h1 class="m-0">{{ feature_name }}</h1>
</div>
<!-- /content-header -->
{% endblock %}
{% block content %}
<div class="row">
  <div class="col-3">
    <div class="sticky-top mb-3">
      <div class="card card-outline">
        <div class="card-header">
          <h3 class="card-title">予約情報の編集</h3>
        </div>
        <div class="card-body">
          <div class="form-group">
            <label for="birthday" class="control-label">予約日</label>
            <input type="date" name="birthday" id="birthday" value="" class="form-control"
              pattern="[0-9]\{4}-[0-9]\{2}-[0-9]\{2}">
          </div>
          <!-- /.form-group -->
          <div class="row">
            <div class="col">
              <div class="form-group">
                <label for="time" class="control-label">開始時間</label>
                <input type="time" name="time" id="time" value="" step="300" class="form-control"
                  pattern="[0-9]\{2}:[0-9]\{2}">
              </div>
              <!-- /.form-group -->
            </div>
            <div class="col">
              <div class="form-group">
                <label for="time" class="control-label">終了時間</label>
                <input type="time" name="time" id="time" value="" step="300" class="form-control"
                  pattern="[0-9]\{2}:[0-9]\{2}">
              </div>
              <!-- /.form-group -->
            </div>
          </div>
          <div class="form-group">
            <label for="text" class="control-label">機器</label>
            <input type="text" name="text" id="text" value="機器1" class="form-control">
          </div>
          <!-- /.form-group -->
          <div class="form-group">
            <label for="text" class="control-label">予約名</label>
            <input type="text" name="text" id="text" value="" class="form-control">
          </div>
          <!-- /.form-group -->
          <div class="form-group">
            <label for="textarea" class="control-label">備考</label>
            <textarea name="textarea" id="textarea" rows="5" class="form-control"></textarea>
          </div>
          <!-- /.form-group -->
        </div>
        <div class="card-footer">
          <a href="{{ action.view.url }}" class="btn btn-success">更新</a>
        </div>
      </div>
      <!-- /.card -->
    </div>
  </div>
  <div class="col-9">
    <div class="card card-outline">
      <div class="card-body" id="calendar">
        <!-- ここにカレンダーがレンダリングされる-->
      </div>
    </div>
  </div>
  <!-- /.card -->
</div>
</div>
{% endblock %}
{% block script_bottom %}
<script src='/assets/js/calendar.js'></script>
{% endblock %}
